 */
function dvm_user_groups_node_insert(Drupal\Core\Entity\EntityInterface $entity) {
  if ('issue' === $entity->bundle()) {
    \Drupal::service('dvm_user_groups.user_group')
      ->groupUserIssue($entity, 'insert');
  }
}

